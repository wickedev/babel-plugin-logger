{
    "name": "babel-plugin-logger",
    "version": "0.1.0",
    "description": "Babel Plugin Logger",
    "repository": "https://github.com/wickedev/babel-plugin-logger",
    "author": "Ryan Yang",
    "license": "MIT",
    "main": "lib/index.js",
    "module": "lib/index.es.js",
    "jsnext:main": "lib/index.es.js",
    "typings": "lib/index.d.ts",
    "scripts": {
        "build": "rollup -c",
        "lint": "eslint --ext .ts,.tsx src",
        "test": "run-s test:unit test:e2e",
        "test:unit": "jest --colors --coverage",
        "test:e2e": "run-s build test:e2e-run",
        "test:e2e-run": "jest --config=e2e/jest.json  --colors",
        "format": "prettier --write \"src/**/*\"",
        "prepare": "yarn run build"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "moduleNameMapper": {
            "^~/(.*)$": "<rootDir>/src/$1"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ],
        "src/**/*.{json,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "overrides": [
            {
                "files": [
                    "src/*.ts",
                    "src/*.tsx"
                ],
                "parser": "@typescript-eslint/parser",
                "parserOptions": {
                    "project": "./tsconfig.json",
                    "tsconfigRootDir": "."
                },
                "plugins": [
                    "@typescript-eslint",
                    "prettier",
                    "sonarjs"
                ],
                "rules": {
                    "prettier/prettier": "error",
                    "@typescript-eslint/no-misused-promises": "warn",
                    "@typescript-eslint/ban-ts-ignore": 0,
                    "@typescript-eslint/no-unused-vars": 0,
                    "@typescript-eslint/no-explicit-any": 0,
                    "@typescript-eslint/no-non-null-assertion": 0,
                    "@typescript-eslint/explicit-function-return-type": 0
                },
                "extends": [
                    "plugin:@typescript-eslint/eslint-recommended",
                    "plugin:@typescript-eslint/recommended",
                    "plugin:@typescript-eslint/recommended-requiring-type-checking",
                    "plugin:sonarjs/recommended",
                    "prettier",
                    "prettier/@typescript-eslint"
                ]
            }
        ]
    },
    "eslintIgnore": [
        "test/fixtures/**/*",
        "node_modules/**/*",
        "lib/**/*",
        "wallaby.js"
    ],
    "prettier": {
        "parser": "typescript",
        "trailingComma": "all",
        "semi": false,
        "singleQuote": true,
        "overrides": [
            {
                "files": [
                    "*.json"
                ],
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "devDependencies": {
        "@babel/generator": "^7.7.2",
        "@babel/helper-plugin-test-runner": "^7.1.0",
        "@babel/parser": "^7.7.3",
        "@babel/plugin-proposal-class-properties": "^7.7.0",
        "@babel/traverse": "^7.7.2",
        "@types/babel__core": "^7.1.3",
        "@types/fs-extra": "^8.0.1",
        "@types/jest": "^24.0.22",
        "@types/node": "^12.12.7",
        "@typescript-eslint/eslint-plugin": "^2.6.1",
        "@typescript-eslint/parser": "^2.6.1",
        "builtin-modules": "^3.1.0",
        "coverage": "^0.4.1",
        "coveralls": "^3.0.7",
        "cross-env": "^6.0.3",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-sonarjs": "^0.5.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rollup": "^1.26.5",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-peer-deps-external": "github:wickedev/rollup-plugin-peer-deps-external#master",
        "rollup-plugin-ts-paths": "^1.0.3",
        "rollup-plugin-typescript2": "^0.25.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "tslib": "^1.10.0",
        "typescript": "^3.7.2"
    },
    "files": [
        "lib"
    ],
    "dependencies": {
        "@babel/helper-plugin-utils": "^7.0.0",
        "@babel/types": "^7.7.2",
        "@bugsnag/safe-json-stringify": "^5.0.0",
        "@types/date-fns": "^2.6.0",
        "@types/uuid": "^3.4.6",
        "date-fns": "^2.7.0",
        "fs-extra": "^8.1.0",
        "uuid": "^3.3.3"
    }
}
